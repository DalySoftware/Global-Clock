{
    "expo": {
        "name": "GlobalClock",
        "slug": "GlobalClock",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/color_logo_with_background.png",
        "splash": {
            "image": "./assets/color_logo_with_background.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "bundleidentifier": "com.dalysoftware.globalclock",
            "supportsTablet": false
        },
        "android": {
            "package": "com.dalysoftware.globalclock",
            "adaptiveIcon": {
                "foregroundImage": "./assets/color_logo_with_background.png",
                "backgroundColor": "#FFFFFF"
            }
        },
        "web": {
            "favicon": "./assets/color_logo_with_background.png"
        },
        "description": "A multi-timezone clock",
        "githubUrl": "https://github.com/IronDoc/Global-Clock"
    }
}
